{% extends 'SifoUserBundle::layout.html.twig' %}

{% block content %}
      <section id="main-content">
          <section class="wrapper">
              <!-- page start-->
              <div class="row">
                  <div class="col-lg-12">
                      <section class="panel">
                          <header class="panel-heading">
                              {{ program.description }}
                              <span class="tools pull-right">
                                <a href="javascript:;" class="icon-chevron-down"></a>
                                <a href="javascript:;" class="icon-remove"></a>
                            </span>
                          </header>
                          <div align="center">
                              <ul class="pagination">
                                  <li><a href="#"><strong>Semester</strong></a></li>
{% for semester in semesters %}
{% if semester['grouping'] is defined %}<li><a href="{{ path('user_result_choose', { 'id': program.id , 'grouping': semester['grouping'] }) }} "><strong>{% else %} {{ semester['romanic'] }} </strong></a></li>{% endif %}
{% endfor %}
                              </ul>
                          </div>
                      </section>
                  </div>
              </div>
              <!-- page end-->
          </section>
      </section>
{% endblock %}