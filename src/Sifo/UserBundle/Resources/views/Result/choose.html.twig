{% extends 'SifoUserBundle::layout.html.twig' %}

{% block content %}
      <section id="main-content">
          <section class="wrapper">
              <!-- page start-->
              <div class="row">
                  <div class="col-lg-12">
                      <section class="panel">
                          <header class="panel-heading">
                              {{ program.description }} - Pilih Semester
                          </header>
                          <div align="center">
                              <ul class="pagination">
                                  <li><a href="#"><strong>Semester</strong></a></li>
{% for semester in semesters %}
{% if semester['grouping'] is defined %}<li><a href="{{ path('user_result_choose', { 'id': program.id , 'grouping': semester['grouping'] }) }} "><strong>{% else %} {{ semester['romanic'] }} </strong></a></li>{% endif %}
{% endfor %}
                              </ul>
                          </div>
                      </section>
                      <section class="panel">
                          <header class="panel-heading">
                              Capaian Kompetensi Semester {{ semester }}
                          </header>
                          <table align="center" width="800px">
                          <tr>
                            <td style="vertical-align:top; font-weight: bold;">Nama Lengkap</td>
                            <td style="vertical-align:top; font-weight: bold;">:</td>
                            <td style="vertical-align:top; font-weight: bold;">{{ user.getName }}</td>
                            <td width="20px" style="vertical-align:top; font-weight: bold;">&nbsp;</td>
                            <td width="100px" style="vertical-align:top; font-weight: bold;">Kelas</td>
                            <td style="vertical-align:top; font-weight: bold;">:</td>
                            <td width="200px" style="vertical-align:top; font-weight: bold;">{{ entity.getClassroom.getName }}</td>
                          </tr>
                          <tr>
                            <td style="vertical-align:top; font-weight: bold;">NIS / NISDN</td>
                            <td style="vertical-align:top; font-weight: bold;">:</td>
                            <td style="vertical-align:top; font-weight: bold;">{{ user.getCode }} / {{ user.getOtherCode }}</</td>
                            <td style="vertical-align:top; font-weight: bold;">&nbsp;</td>
                            <td style="vertical-align:top; font-weight: bold;">Semester</td>
                            <td style="vertical-align:top; font-weight: bold;">:</td>
                            <td style="vertical-align:top; font-weight: bold;">{{ semester }}</td>
                          </tr>
                          <tr>
                            <td width="100px" style="vertical-align:top; font-weight: bold;">Nama Sekolah</td>
                            <td style="vertical-align:top; font-weight: bold;">:</td>
                            <td width="350px" style="vertical-align:top; font-weight: bold;">{{ entity.getUnit.getDescription }}</td>
                            <td style="vertical-align:top; font-weight: bold;">&nbsp;</td>
                            <td style="vertical-align:top; font-weight: bold;">Tahun Ajaran</td>
                            <td style="vertical-align:top; font-weight: bold;">:</td>
                            <td style="vertical-align:top; font-weight: bold;">{{ entity.getPeriod.getName }}</td>
                          </tr>
                          <tr>
                            <td style="vertical-align:top; font-weight: bold;">Alamat</td>
                            <td style="vertical-align:top; font-weight: bold;">:</td>
                            <td colspan="5" style="vertical-align:top; font-weight: bold;">{{ entity.getUnit.getAddress }}</td>
                          </tr>
                          </table>
                          <table align="center" width="800px" style="margin-top: 30px" border="1">
                          <tr>
                            <th colspan="2" rowspan="2" style="text-align: center">MATA PELAJARAN</th>
                            <th colspan="2" style="text-align: center">Pengetahuan</th>
                            <th colspan="2" style="text-align: center">Keterampilan</th>
                            <th rowspan="2" style="text-align: center">Sikap</th>
                          </tr>
                          <tr>
                            <th style="text-align: center">Angka (0-4)</th>
                            <th style="text-align: center">Predikat (E-A)</th>
                            <th style="text-align: center">Angka (0-4)</th>
                            <th style="text-align: center">Predikat (E-A)</th>
                          </tr>
                          <tr>
                            <th colspan="7" style="text-align: center">Kelompok A (Wajib)</th>
                          </tr>
{% set i = 0 %}
{% for result in results %}
{% if result.getSubjectsGrouping.getCategory == 'A' %}
{% set i = i + 1 %}
                          <tr>
                            <td>{{ i }}. </td>
                            <td>{{ result.subjectsGrouping.subject.name }} <br/>( {{ result.subjectsGrouping.employee.name }} )</td>
                            <td>{{ result.number1 }}</td>
                            <td></td>
                            <td>{{ result.number2 }}</td>
                            <td></td>
                            <td>{{ result.text1 }}</td>
                          </tr>
{% endif %}
{% endfor %}
                          <tr>
                            <th colspan="7" style="text-align: center">Kelompok B (Wajib)</th>
                          </tr>
{% set i = 0 %}
{% for result in results %}
{% if result.getSubjectsGrouping.getCategory == 'B' %}
{% set i = i + 1 %}
                          <tr>
                            <td>{{ i }}. </td>
                            <td>{{ result.subjectsGrouping.subject.name }} <br/>( {{ result.subjectsGrouping.employee.name }} )</td>
                            <td>{{ result.number1 }}</td>
                            <td></td>
                            <td>{{ result.number2 }}</td>
                            <td></td>
                            <td>{{ result.text1 }}</td>
                          </tr>
{% endif %}
{% endfor %}
                          <tr>
                            <th colspan="7" style="text-align: center">Kelompok C (Peminatan)</th>
                          </tr>
{% set i = 0 %}
{% for result in results %}
{% if result.getSubjectsGrouping.getCategory == 'C' %} 
{% set i = i + 1 %}
                          <tr>
                            <td>{{ i }}. </td>
                            <td>{{ result.subjectsGrouping.subject.name }} <br/>( {{ result.subjectsGrouping.employee.name }} )</td>
                            <td>{{ result.number1 }}</td>
                            <td></td>
                            <td>{{ result.number2 }}</td>
                            <td></td>
                            <td>{{ result.text1 }}</td>
                          </tr>
{% endif %}
{% endfor %}
                          <tr>
                            <th colspan="7" style="text-align: center">Kelompok Ekstrakurikuler</th>
                          </tr>
{% set i = 0 %}
{% for result in results %}
{% if result.getSubjectsGrouping.getCategory == 'Ekstrakurikuler' %} 
{% set i = i + 1 %}
                          <tr>
                            <td>{{ i }}. </td>
                            <td>{{ result.subjectsGrouping.subject.name }} <br/>( {{ result.subjectsGrouping.employee.name }} )</td>
                            <td colspan="5">{{ result.text1 }}</td>
                          </tr>
{% endif %}
{% endfor %}
                          </table>
                      </section>
                  </div>
              </div>
              <!-- page end-->
          </section>
      </section>
{% endblock %}