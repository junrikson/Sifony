{% extends 'SifoUserBundle::layout.html.twig' %}

{% block header_profil %}
                      <li class="active"><a href="{{ path('user_profile') }}">Profil</a></li>
{% endblock %}

{% form_theme form _self %}
{% block form_row %}
<div class="form-group">
  {{ form_label(form) }}
  <div class="col-sm-10">
    {{ form_widget(form) }}
    {{ form_errors(form) }}
  </div>
</div>
{% endblock %}

{% block content %}
      <section id="main-content">
          <section class="wrapper">
              <!-- page start-->
              <div class="row">
                  <aside class="profile-nav col-lg-3">
                      <section class="panel">
                          <div class="user-heading round">
                              <a href="#">
                                  <img src="{{ asset('bundles/sifoshared/img/profile-avatar.jpg') }}" alt="">
                              </a>
                              <h1>{{ user.code }}</h1>
                              <p>{{ user.name }}</p>
                          </div>

                          <ul class="nav nav-pills nav-stacked">
                              <li><a href="{{ path('user_profile') }}"> <i class="icon-user"></i> Profil</a></li>
                              <li><a href="{{ path('user_profile_edit') }}"> <i class="icon-edit"></i> Edit Profil</a></li>
                              <li class="active"><a href="#"> <i class="icon-wrench"></i> Pengaturan</a></li>
                          </ul>

                      </section>
                  </aside>
                  <aside class="profile-info col-lg-9">
                      <section class="panel">
                          <div class="bio-graph-heading">
                              <strong>Hubungkan dengan Akun Facebook atau Twitter anda untuk mempermudah akses login.<br/>Ganti password secara berkala.</strong>
                          </div>
                          <div class="panel-body bio-graph-info" style="text-align: center;">
                              <h1>Hubungkan dengan akun Facebook dan Twitter saya</h1>
                              <div class="login-social-link">
{% if user.getFacebookId == null %}
                              <a href="#" onclick="FB.login();" class="label-primary"> <i class="icon-facebook"></i> Bind Facebook</a>
{% else %}
                              <a href="#facebookModal" data-toggle="modal" class="btn-danger"> <i class="icon-facebook"></i> Reset Facebook</a>
{% endif %}
{% if user.getTwitterId == null %}
                              <a href="#" class="btn-info"> <i class="icon-twitter"></i> Bind Twitter</a>
{% else %}
                              <a href="#twitterModal" data-toggle="modal" class="btn-danger"> <i class="icon-twitter"></i> Reset Twitter</a>
{% endif %}
                                  <div class="modal fade" id="facebookModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                  <div class="modal-dialog" align="left">
                                      <div class="modal-content">
                                          <div class="modal-header">
                                              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                              <h4 class="modal-title">Konfirmasi</h4>
                                          </div>
                                          <div class="modal-body" align="right" >
                                            <p align="left">Apakah anda yakin mau mereset akun Facebook anda dari sistem?</p>
                                            {{ form(form_facebook) }}
                                          </div>
                                      </div>
                                  </div>
                                  </div>
                                  <div class="modal fade" id="twitterModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                  <div class="modal-dialog" align="left">
                                      <div class="modal-content">
                                          <div class="modal-header">
                                              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                              <h4 class="modal-title">Konfirmasi</h4>
                                          </div>
                                          <div class="modal-body" align="right" >
                                            <p align="left">Apakah anda yakin mau mereset akun Twitter anda dari sistem?</p>
                                            {{ form(form_twitter) }}
                                          </div>
                                      </div>
                                  </div>
                                  </div>   
                              </div>
                          </div>
                          <div class="panel-body bio-graph-info">
                              <h1>Ubah Password</h1>
                              <div class="form-horizontal tasi-form">
                              {{ form(form) }}
                              </div>
                          </div>
                      </section>
                  </aside>
              </div>

              <!-- page end-->
          </section>
      </section>
{% endblock %}