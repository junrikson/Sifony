{% extends 'SifoUserBundle::layout.html.twig' %}

{% block top_special_embed %} 
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/sifoshared/assets/bootstrap-datepicker/css/datepicker.css') }}" /> 
{% endblock %}

{% block header_profil %}
                      <li class="active"><a href="{{ path('user_profile') }}">Profil</a></li>
{% endblock %}

{% form_theme form _self %}
{% block form_row %}
<div class="form-group">
  {{ form_label(form) }}
  <div class="col-sm-10">
    {{ form_widget(form) }}
    {{ form_errors(form) }}
  </div>
</div>
{% endblock %}

{% block content %}
      <section id="main-content">
          <section class="wrapper">
              <!-- page start-->
              <div class="row">
                  <aside class="profile-nav col-lg-3">
                      <section class="panel">
                          <div class="user-heading round">
                              <a href="#">
                                  <img src="{{ asset('bundles/sifoshared/img/profile-avatar.jpg') }}" alt="">
                              </a>
                              <h1>{{ user.code }}</h1>
                              <p>{{ user.name }}</p>
                          </div>

                          <ul class="nav nav-pills nav-stacked">
                              <li><a href="{{ path('user_profile') }}"> <i class="icon-user"></i> Profil</a></li>
                              <li class="active"><a href="#"> <i class="icon-edit"></i> Edit Profil</a></li>
                              <li><a href="{{ path('user_profile_settings') }}"> <i class="icon-wrench"></i> Pengaturan</a></li>
                          </ul>

                      </section>
                  </aside>
                  <aside class="profile-info col-lg-9">
                      <section class="panel">
                          <div class="bio-graph-heading">
                              <strong>Untuk kesalahan Nama dan Nomor Induk mohon hubungi bagian administrasi untuk perbaikan.<br/>Nama harus sesuai dengan Akta kelahiran.<br/>Perubahan Password dan Akun Facebook / Twitter pada <a href="{{ path('user_profile_settings') }}">Pengaturan</a>.
                          </div>
                          <div class="panel-body">
                              <div class="form-horizontal tasi-form">
                                  {{ form(form) }}
                              </div>
                          </div>
                      </section>
                  </aside>
              </div>

              <!-- page end-->
          </section>
      </section>
{% endblock %}

{% block bottom_special_embed %} 
    <script type="text/javascript" src="{{ asset('bundles/sifoshared/assets/bootstrap-datepicker/js/bootstrap-datepicker.js') }}"></script> 
    <script src="{{ asset('bundles/sifoshared/js/advanced-form-components.js') }}"></script>
{% endblock %}
