{% block body %}
<body class="page-homepage-carousel">
{% endblock %}

<!-- Wrapper -->
<div class="wrapper">
<!-- Header -->
<div class="navigation-wrapper">
    <div class="secondary-navigation-wrapper">
        <div class="container">
            <div class="navigation-contact pull-left">Telp:  <span class="opacity-70">+6261 8457702 – 8457033 </span></div>
            <ul class="secondary-navigation list-unstyled pull-right">
{% for cat in categories %}
                <li><a href="{{ path('public_default_category', { 'category': cat.code }) }}">{% if( cat == category) %}<i>{{ cat.name }}</i>{% else %}{{ cat.name }}{% endif %}</a></li>
{% endfor %}
            </ul>
        </div>
    </div><!-- /.secondary-navigation -->

    <div class="primary-navigation-wrapper">
        <header class="navbar" id="top" role="banner">
            <div class="container">
                <div class="navbar-header">
                    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="navbar-brand nav" id="brand">
                        <a href="{{ path('public_default') }}"><img src="{{ asset('bundles/sifopublic/assets/img/logo.png') }}" alt="brand" /></a>
                    </div>
                </div>

{% block menu %}
                <nav class="collapse navbar-collapse bs-navbar-collapse navbar-right" role="navigation">
                    <ul class="nav navbar-nav">
{% for menu in menus %}
  {% if menu.parent == null and menu.type == 2 %}
                        <li class="">
                            <a href="{{ menu.blogPage == null  ? path('public_default') : path('public_default_page', { 'category': category.id, 'page': menu.blogPage.code }) }}">{{ menu.name }}</a>                            
                        </li>
  {% elseif menu.type == 1 %}
                        <li>
                            <a href="#" class="has-child no-link">{{ menu.name }}</a>
                            <ul class="list-unstyled child-navigation">
     {% for children in menu.children %}
                                <li><a href="{{ children.blogPage == null  ? '#' : path('public_default_page', { 'category': category.id, 'page': children.blogPage.code }) }}">{{ children.name }}</a></li>
     {% endfor %}
                            </ul>
                        </li>     
  {% endif %}
{% endfor %}
                    </ul>
                </nav><!-- /.navbar collapse-->
{% endblock %}
            </div><!-- /.container -->
        </header><!-- /.navbar -->
    </div><!-- /.primary-navigation -->

    <div class="background">
    </div>
</div>
<!-- end Header -->

{% block breadcrumb %}
{% endblock %}

<!-- Page Content -->
<div id="page-content">
{% block content %}

{% endblock %}
</div>
<!-- end Page Content -->

