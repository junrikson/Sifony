{% extends 'SifoAdminBundle::manage/layout.html.twig' %}

{% block content_data %}
                              <div class="form-horizontal tasi-form" style="margin-top: 30px;">
                              {{ form(form) }}
                              </div>
{% if form_collection != null %}
{{ form_start(form_collection) }}
{{ form_row(form_collection.program) }}
{{ form_row(form_collection.subjects_grouping) }}
                              <div class="" style="margin-top: 30px;">
                                  <div class="panel-body progress-panel">
                                      <header class="panel-heading">Daftar Nilai - {{ form_collection.program.vars.data }} - {{ form_collection.subjects_grouping.vars.data }}</header>
                                  </div>
                                  <div class="panel-body progress-panel">
                                  <table class="table table-striped table-advance table-hover">
                                      <thead>
                                      <tr>
                                          <th rowspan="2" width="60px"><i class="icon-zoom-in"></i> NIS</th>
                                          <th rowspan="2" width="250px"><i class="icon-user"></i> Nama</th>
                                          <th colspan="3" style="text-align: center">Nilai Angka</th>
                                          <th colspan="2" style="text-align: center">Nilai Teks</th>
                                          <th rowspan="2" style="text-align: center"><i class="icon-comment"></i> Keterangan</th>
                                      </tr>
                                      <tr>
                                          <th style="text-align: center">1</th>
                                          <th style="text-align: center">2</th>
                                          <th style="text-align: center">3</th>
                                          <th style="text-align: center">1</th>
                                          <th style="text-align: center">2</th>
                                      </tr>
                                      </thead>
                                      <tbody>
    {% for key, result in form_collection.results %}
                                      <tr>
                                          <td><a href="{{ path('admin_master_student_show', { 'id': entities[key].student.id }) }}"><strong>{{ entities[key].student.code }}</strong></a></td>
                                          <td>{{ entities[key].student.name }}</td>
                                          <td style="text-align: center">{{ form_row(result.number_1) }}</td>
                                          <td style="text-align: center">{{ form_row(result.number_2) }}</td>
                                          <td style="text-align: center">{{ form_row(result.number_3) }}</td>
                                          <td style="text-align: center">{{ form_row(result.text_1) }}</td>
                                          <td style="text-align: center">{{ form_row(result.text_2) }}</td>
                                          <td style="text-align: center">{{ form_row(result.description) }}</td>
                                      </tr>
    {% endfor %}
                                      </tbody>
                                  </table>
{{ form_end(form_collection) }}
                                  </div>
                              </div>
{% endif %} 
{% endblock %}