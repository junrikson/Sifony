{% extends 'SifoAdminBundle::layout.html.twig' %}

{% block content %}
              <!-- page start-->
              <section class="panel">
                  <header class="panel-heading">
{% block content_header %}
{{ ('admin.route.' ~ currentGroup)|trans }} - {{ ('admin.route.' ~ currentRoute)|trans }}
{% endblock %}
                  </header>
                  <div class="panel-body">
                      <div class="adv-table editable-table ">
                          <div class="clearfix">
{% block content_button_back %}
                              <div class="btn-group">
                                  <a href="{{ path(currentRoute|slice(0,(currentRoute|length)-5)) }}"  class="btn btn-success" ><i class="icon-hand-left"></i>&nbsp;{{ 'admin.button.backToList'|trans }}</a> 
                              </div>
{% endblock %}
                              <div class="btn-group pull-right">
                                  <button class="btn dropdown-toggle" data-toggle="dropdown">{{ 'admin.button.tools'|trans }}&nbsp;<i class="icon-angle-down"></i>
                                  </button>
                                  <ul class="dropdown-menu pull-right">
                                      <li><a href="#">{{ 'admin.button.print'|trans }}</a></li>
                                      <li><a href="#">{{ 'admin.button.savePdf'|trans }}</a></li>
                                      <li><a href="#">{{ 'admin.button.exportExcel'|trans }}</a></li>
                                  </ul>
                              </div>
{% block content_button_remove %}
                              <div class="btn-group pull-right" style="margin-right: 5px;"><a href="{{ path((currentRoute|slice(0,(currentRoute|length)-5) ~ '_remove'), { 'id': entity.id }) }}" class="btn btn-danger"><i class="icon-trash"></i>&nbsp;{{ 'admin.button.delete'|trans }}</a></div> 
{% endblock %}
                          </div>
                          <div class="space15"></div>
{% block content_data %} {% endblock %}
                                  <div class="form-group">
                                      <div class="col-lg-2 col-sm-2 control-label">
{% block content_button_edit %}
                                          <a href="{{ path((currentRoute|slice(0,(currentRoute|length)-5) ~ '_edit'), { 'id': entity.id }) }}" class="btn btn-primary"><i class="icon-edit"></i>&nbsp;{{ 'admin.button.edit'|trans }}</a>
{% endblock %}
                                      </div>
                                  </div>
                                </div>
                      </div>
                  </div>
              </section>
              <!-- page end-->
{% endblock %}
