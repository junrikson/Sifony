{% extends 'SifoAdminBundle::show/layout.html.twig' %}

{% block content_data %}
                                <div class="form-horizontal tasi-form" style="margin-top: 30px;">
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">{{ 'admin.label.code'|trans }}</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.code }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">{{ 'admin.label.name'|trans }}</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.name }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">{{ 'admin.label.category'|trans }}</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.blogCategory }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">{{ 'admin.label.orders'|trans }}</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.orders }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">{{ 'admin.label.type'|trans }}</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.type }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">{{ 'admin.label.page'|trans }}</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.blogPage }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">{{ 'admin.label.description'|trans }}</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.description }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">{{ 'admin.label.isActive'|trans }}</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">
                                            {% if entity.isActive == "1" %}
                                            <i class="icon-ok"></i>
                                            {% else %}
                                            <i class="icon-remove"></i>
                                            {% endif %}
                                          </p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">{{ 'admin.label.createdAt'|trans }}</label>
                                      <div class="col-lg-10">
                                            <p class="form-control-static">{{ entity.createdAt|date('d-m-Y H:i:s') }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">{{ 'admin.label.updatedAt'|trans }}</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.updatedAt|date('d-m-Y H:i:s') }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">{{ 'admin.label.operator'|trans }}</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.operator }}</p>
                                      </div>
                                  </div>                                  
{% endblock %}