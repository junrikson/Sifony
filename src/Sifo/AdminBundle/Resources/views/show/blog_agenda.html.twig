{% extends 'SifoAdminBundle::show/layout.html.twig' %}

{% block content_data %}
                                <div class="form-horizontal tasi-form" style="margin-top: 30px;">
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">{{ 'admin.label.tittle'|trans }}</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.tittle }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">{{ 'admin.label.category'|trans }}</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">
                                              {% for category in entity.blogCategory %}
                                                  (&nbsp;{{ category }}&nbsp;)
                                              {% endfor %}
                                          </p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">{{ 'admin.label.dateStart'|trans }}</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.dateStart|date('d-m-Y') }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">{{ 'admin.label.dateEnd'|trans }}</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.dateEnd|date('d-m-Y') }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">{{ 'admin.label.timeStart'|trans }}</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.timeStart|date('H:i:s') }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">{{ 'admin.label.timeEnd'|trans }}</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.timeEnd|date('H:i:s') }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">{{ 'admin.label.place'|trans }}</label>
                                      <div class="col-lg-10">
                                          {{ entity.place }}
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">{{ 'admin.label.content'|trans }}</label>
                                      <div class="col-lg-10">
                                          {{ entity.content|raw }}
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">{{ 'admin.label.isActive'|trans }}</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">
                                            {% if entity.isActive == "1" %}
                                            <i class="icon-ok"></i>
                                            {% else %}
                                            <i class="icon-remove"></i>
                                            {% endif %}
                                          </p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">{{ 'admin.label.createdAt'|trans }}</label>
                                      <div class="col-lg-10">
                                            <p class="form-control-static">{{ entity.createdAt|date('d-m-Y H:i:s') }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">{{ 'admin.label.updatedAt'|trans }}</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.updatedAt|date('d-m-Y H:i:s') }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">{{ 'admin.label.operator'|trans }}</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.operator }}</p>
                                      </div>
                                  </div>                                  
{% endblock %}