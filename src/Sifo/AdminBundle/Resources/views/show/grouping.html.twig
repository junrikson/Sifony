{% extends 'SifoAdminBundle::show/layout.html.twig' %}

{% block content_data %}
                                <div class="form-horizontal tasi-form" style="margin-top: 30px;">
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">Nama</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.name }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">Unit</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.unit }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">Periode</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.period }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">Semester</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">
                                            {% if entity.semester == 0 %}
                                                Ganjil
                                            {% elseif entity.semester == 1 %}
                                                Genap
                                            {% else %}
                                                {{ entity.semester }}
                                            {% endif %}
                                          </p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">Kelas</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.classroom }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">Wali Kelas</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.employee }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">Keterangan</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.description }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">Aktif</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">
                                            {% if entity.isActive == "1" %}
                                            <i class="icon-ok"></i>
                                            {% else %}
                                            <i class="icon-remove"></i>
                                            {% endif %}
                                          </p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">Dibuat Pada</label>
                                      <div class="col-lg-10">
                                            <p class="form-control-static">{{ entity.createdAt|date('d-m-Y H:i:s') }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">Diupdate Terakhir</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.updatedAt|date('d-m-Y H:i:s') }}</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-2 col-sm-2 control-label">Operator</label>
                                      <div class="col-lg-10">
                                          <p class="form-control-static">{{ entity.operator }}</p>
                                      </div>
                                  </div>
{% endblock %}