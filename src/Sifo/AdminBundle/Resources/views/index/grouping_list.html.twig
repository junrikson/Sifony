{% extends 'SifoAdminBundle::index/layout.html.twig' %}

{% block content_button_add %}{% endblock %}

{% block content_table %}                      
                            <table class="table table-striped table-advance table-hover" >
                                <thead>
                                <tr>
                                  <th><i class="icon-bookmark"></i> Nama</th>
                                  <th><i class="icon-comment"></i> Keterangan</th>
                                  <th style="text-align: center;"><i class="icon-tag"></i> Unit</th>
                                  <th width="200px" style="text-align: center;"><i class="icon-wrench"></i> Actions</th>
                                </tr>
                                </thead>
                                <tbody>
{% if entities == null %}
                                  <tr><td colspan="4" style="text-align: center; font-weight: bold; font-style: italic;">- No Data Available -</td></tr>
{% else %}
{% for entity in entities %}
                                <tr>
                                  <td><a href="{{ path( currentRoute ~ '_manage', { 'id': entity.id }) }}"><strong>{{ entity.name }}</strong></a></td>
                                  <td>{{ entity.description }}</td>
                                  <td style="text-align: center;">{{ entity.unit }}</td>
                                  <td style="text-align: center;"><a class="btn btn-success btn-xs" href="{{ path( currentRoute ~ '_manage', { 'id': entity.id }) }}"><i class="icon-wrench"></i>&nbsp;Manage</a></td>
                                </tr>
{% endfor %}
{% endif %}
                                </tbody>
                            </table>
{% endblock %}

{% block content_batch %}{% endblock %}
{% block bottom_special_embed %}{% endblock %}  