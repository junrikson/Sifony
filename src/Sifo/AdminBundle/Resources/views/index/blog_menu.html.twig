{% extends 'SifoAdminBundle::index/layout.html.twig' %}

{% block content_table %}
                          <table class="table table-striped table-advance table-hover" style="margin-top:20px" >
                              <thead>
                              <tr>
                                  <th width="50px"></th>
                                  <th><i class="icon-bookmark"></i>&nbsp;{{ 'admin.label.code'|trans }}</th>
                                  <th><i class="icon-comment"></i>&nbsp;{{ 'admin.label.category'|trans }}</th>
                                  <th><i class="icon-comment"></i>&nbsp;{{ 'admin.label.name'|trans }}</th>
                                  <th><i class="icon-sort-by-order"></i>&nbsp;{{ 'admin.label.parent'|trans }}</th>
                                  <th><i class="icon-sort-by-order"></i>&nbsp;{{ 'admin.label.orders'|trans }}</th>
                                  <th width="100px" style="text-align: center;"><i class="icon-check"></i>&nbsp;{{ 'admin.label.status'|trans }}</th>
                                  <th width="200px" style="text-align: center;"><i class="icon-wrench"></i>&nbsp;{{ 'admin.label.tools'|trans }}</th>
                              </tr>
                              </thead>
                              <tbody>
                                  {% if entities == null %}
                                  <tr><td colspan="7" style="text-align: center; font-weight: bold; font-style: italic;">{{ 'admin.text.noData'|trans }}</td></tr>
                                  {% else %}
                                  {% for key, entity in entities %}
                                  <tr>
                                  <td><input type="checkbox" id="check_{{ key }}" class="checkBatch" /></td>
                                  <td><a href="{{ path('admin_blog_menu_show', { 'id': entity.id }) }}"><strong>{{ entity.code }}</strong></a></td>
                                  <td>{{ entity.blogCategory }}</td>
                                  <td>{{ entity.name }}</td>
                                  <td>{{ entity.parent }}</td>
                                  <td>{{ entity.orders }}</td>
                                  <td style="text-align: center;">
                                  {% if entity.isActive == "1" %}
                                  <i class="icon-ok"></i>
                                  {% else %}
                                  <i class="icon-remove"></i>
                                  {% endif %}</td>
                                  <td style="text-align: center;" width="200px">
                                  <a class="btn btn-primary btn-xs" href="{{ path('admin_blog_menu_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i>&nbsp;{{ 'admin.button.edit'|trans }}</a>
                                  <a class="btn btn-danger btn-xs" href="{{ path('admin_blog_menu_remove', { 'id': entity.id }) }}"><i class="icon-pencil"></i>&nbsp;{{ 'admin.button.delete'|trans }}</a>
                                  </td>
                                  {% endfor %}   
                                  {% endif %}                                    
                              </tbody>
                          </table>
{% endblock %}