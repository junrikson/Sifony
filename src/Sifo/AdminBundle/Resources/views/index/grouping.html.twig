{% extends 'SifoAdminBundle::index/layout.html.twig' %}

{% block content_table %} 
                          <table class="table table-striped table-advance table-hover" style="margin-top:20px" >
                              <thead>
                              <tr>
                                  <th width="50px"></th>
                                  <th><i class="icon-bookmark"></i> Nama</th>
                                  <th><i class="icon-comment"></i> Keterangan</th>
                                  <th width="100px" style="text-align: center;"><i class="icon-check"></i> Status</th>
                                  <th width="200px" style="text-align: center;"><i class="icon-wrench"></i> Actions</th>
                              </tr>
                              </thead>
                              <tbody>
                                  {% if entities == null %}
                                  <tr><td colspan="5" style="text-align: center; font-weight: bold; font-style: italic;">- No Data Available -</td></tr>
                                  {% else %}
                                  {% for key, entity in entities %}
                                  <tr>
                                  <td><input type="checkbox" id="check_{{ key }}" class="checkBatch" /></a></td>
                                  <td><a href="{{ path('admin_grouping_grouping_show', { 'id': entity.id }) }}"><strong>{{ entity.name }}</strong></a></td>
                                  <td>{{ entity.description }}</td>
                                  <td style="text-align: center;">
                                  {% if entity.isActive == "1" %}
                                  <i class="icon-ok"></i>
                                  {% else %}
                                  <i class="icon-remove"></i>
                                  {% endif %}</td>
                                  <td style="text-align: center;" width="200px">
                                  <a class="btn btn-primary btn-xs" href="{{ path('admin_grouping_grouping_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i>&nbsp;Edit</a>
                                  <a class="btn btn-danger btn-xs" href="{{ path('admin_grouping_grouping_remove', { 'id': entity.id }) }}"><i class="icon-pencil"></i>&nbsp;Delete</a>
                                  </td>
                                  {% endfor %}   
                                  {% endif %}                                    
                              </tbody>
                          </table>
{% endblock %}